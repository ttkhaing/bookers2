<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/side', book: @book, user: @user %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Books</h2>
        <table class= "table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @users.get_profile_image(100,100) %></td>
              <td><%=link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>