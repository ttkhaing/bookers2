<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'form', book: @book, user: @user %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h1>Book detail</h1>
      <table>
        <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %>
            <br><h5><%= link_to @user.name, user_path(@user.id) %></h5></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %>
          <td><% if @book.user == current_user %>
                <p><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></p>
              <% end %>
          </td>
          <td><% if @book.user == current_user %>
                <p><%= link_to 'Destroy', destroy_book_path, method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></p>
              <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

